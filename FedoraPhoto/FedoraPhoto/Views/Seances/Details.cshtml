        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Telephone3)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telephone3)
        </dd>

    </dl>
</div>

<table class="table" width="100%">
    <tr>
        <th colspan="3">Photos</th>
    </tr>
    @for (int row = 0; row <= photos.Count / 3; row++)
    {
        <tr>
            @for (int column = 0; column < 3 && row * 3 + column < photos.Count; column++)
			{
                <td><img src=@("..\\..\\" + photos[row * 3 + column].PhotoPath) alt="@photos[row * 3 + column].PhotoName" /></td>
			}
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.SeanceID }) |
