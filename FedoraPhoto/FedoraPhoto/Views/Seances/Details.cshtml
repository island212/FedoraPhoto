@model FedoraPhoto.Models.Seance

@{
    ViewBag.Title = "Details";
    var photos = new List<FedoraPhoto.Models.Photo>(Model.Photos);
}

<style>
    img {
       height:auto;
       max-width:100%;
       width:auto;
    }

    table {
        table-layout: fixed;
    }

</style>

<h2>Details</h2>

<div>
    <h4>Seance</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Agent.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Agent.Nom)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Photographe.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Photographe.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateSeance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateSeance)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Adresse)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Adresse)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Telephone1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telephone1)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Telephone2)
        </dt>

        <dd>
